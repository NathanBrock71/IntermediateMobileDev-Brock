<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieMobileApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Hello, Welcome to Nathan's Movie App"
                Style="{StaticResource Headline}"/>

            <Image Source="https://kettleheroes.com/wp-content/uploads/2022/02/Why-is-Popcorn-a-Movie-Food.jpg"/>

            <Label
                Text="This is an app about all of Nathan's favorite movies"
                Style="{StaticResource SubHeadline}"/>

            <Label
                Text="This app was made for an API assignment. We created our own API, linked to a database, placed those in docker containers, and then made an app to consume the API. Ngrok was then used to help all of these componenets communicate."/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
