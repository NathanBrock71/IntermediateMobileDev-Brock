<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MovieMobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MovieMobileApp"
    xmlns:views="clr-namespace:MovieMobileApp.Views"
    Title="MovieMobileApp">




    <FlyoutItem Title="Home">
        <Tab>
            <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="All Movies">
        <Tab>
            <ShellContent Title="All Movies" ContentTemplate="{DataTemplate views:MovieList}" Route="MovieList" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Add Movie">
        <Tab>
            <ShellContent Title="AddMovie" ContentTemplate="{DataTemplate views:AddMovie}" Route="AddMovie" />
        </Tab>
    </FlyoutItem>

</Shell>
