<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MappingApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MappingApp"
    Shell.FlyoutBehavior="Disabled"
    Title="MappingApp">

    <ShellItem>
        <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Title="Create Route" ContentTemplate="{DataTemplate local:CreateRoutePage}" />
        <ShellContent Route="SavedRoutesPage" Title="Saved Routes" ContentTemplate="{DataTemplate local:SavedRoutesPage}" />
    </ShellItem>

</Shell>
