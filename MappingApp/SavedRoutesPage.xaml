<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MappingApp.SavedRoutesPage"
             Title="SavedRoutesPage">
    <ContentPage.BindingContext>
        <local:RoutesListViewModel />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Routes}"
                    SelectionMode="Single"
                    SelectionChanged="OnRouteSelected">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="10">
                    <Label Text="{Binding StartLocation}" />
                    <Label Text="{Binding EndLocation}" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>